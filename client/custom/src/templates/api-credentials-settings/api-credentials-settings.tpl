<div class="settings-panel">
    <h2>API Credentials</h2>
    <div class="form-group">
        <label>API Key:</label>
        <input type="text" name="apiKey" value="{{apiKey}}" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Secret Key:</label>
        <input type="text" name="secretKey" value="{{secretKey}}" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Destination URL:</label>
        <input type="text" name="destinationUrl" value="{{destinationUrl}}" class="form-control"/>
    </div>
    <button id="saveApiCredentials" class="btn btn-primary">Save</button>
</div>

